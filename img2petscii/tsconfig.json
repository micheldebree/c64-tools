{
  "compilerOptions": {
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "built",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "strictNullChecks": false,
    "alwaysStrict": true
  },
  "exclude": ["node_modules"]
}
